if [ $# -eq 0 ]
then
echo "[1] Enter IPs manually "
echo "[2] Get from File(ip.txt)"
read -p " [>] Choice : " c 
	case $c in 
	1)
	echo -e  "enter values separated by space :"
	read ip
	;;

	2)
	ip=(`cat ip.txt`)
	;;
	esac
fi



dir=$HOME/`date +%d_%m_%Y`
#ip=(`cat ip.txt`)
if [ ! -d $dir ]
then
mkdir $dir
fi

cd $dir

#echo $dir




#ping 
ping_ip(){

if [ ! -d $dir/ping ]
then
mkdir $dir/ping
fi

fnm=$dir/ping/$1_`date +%H:%M`.txt
#echo $fnm
if [ ! -f $fnm ]
then
touch $fnm
fi

echo "=============================" > $fnm
echo " >> Ping Checking $1 "
echo " Ping Checking $1       " >> $fnm
echo "=============================" >> $fnm
ping -c 10 $1 >> $fnm
echo "==========*********==========" >> $fnm
echo " " >> $fnm
}


#sslscan
ssl_scan(){

if [ ! -d $dir/sslscan ]
then
mkdir $dir/sslscan
fi

fnm=$dir/sslscan/$1_`date +%H:%M`.txt
#echo $fnm
if [ ! -f $fnm ]
then
touch $fnm
fi

echo "=============================" > $fnm
echo " >> SSLscan Report $1       "
echo " SSLscan Report $1       " >> $fnm
echo "=============================" >> $fnm
sslscan $1 >> $fnm
echo "==========*********===========" >> $fnm
echo " " >> $fnm
}


