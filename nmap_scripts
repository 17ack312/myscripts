#nmap Service and OS
serv_os(){

if [ ! -d $dir/serv_os ]
then
mkdir $dir/serv_os
fi

fnm=$dir/serv_os/$1_`date +%H:%M`.txt
#echo $fnm
if [ ! -f $fnm ]
then
touch $fnm
fi

echo "=============================" > $fnm
echo " >> Service and OS scan $1       "
echo " Service and OS scan $1       " >> $fnm
echo "=============================" >> $fnm
nmap -sV -O $1 >> $fnm
echo "=========**********==========" >> $fnm
echo " " >> $fnm
}


#nmap_default
nmapdef(){

if [ ! -d $dir/nmap_def ]
then
mkdir $dir/nmap_def
fi

fnm=$dir/nmap_def/$1_`date +%H:%M`.txt
#echo $fnm
if [ ! -f $fnm ]
then
touch $fnm
fi

echo "=============================" > $fnm
echo " >> Default Script  scan $1       "
echo " Default Script  scan $1       " >> $fnm
echo "=============================" >> $fnm
nmap -sC $1 >> $fnm
echo "=========**********==========" >> $fnm
echo " " >> $fnm
}



#vulners.nse
vuln(){

