#echo $fnm
if [ ! -f $fnm ]
then
touch $fnm
fi

echo "=============================" > $fnm
echo " >> Vulners.nse scan $1       "
echo " Vulners.nse scan $1       " >> $fnm
echo "=============================" >> $fnm
nmap --script=vulners.nse $1 >> $fnm
echo "=========**********==========" >> $fnm
echo " " >> $fnm
}


